                android:textColor="#E7FFEF"
                android:textSize="18dp" />

            <LinearLayout
                android:id="@+id/linearLayout18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="top"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="44dp"
                    android:layout_height="30dp"
                    android:layout_gravity="top"
                    android:layout_margin="2dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/one_player"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/rebel_button_red"
                        android:paddingTop="4dp"
                        android:paddingBottom="6dp"
                        android:tintMode="multiply"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/one_player_icon" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="44dp"
                    android:layout_height="30dp"
                    android:layout_gravity="top"
                    android:layout_margin="2dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/two_player"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/rebel_button_red"
                        android:paddingTop="4dp"
                        android:paddingBottom="6dp"
                        android:tintMode="multiply"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/two_player" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="44dp"
                    android:layout_height="30dp"
                    android:layout_gravity="top"
                    android:layout_margin="2dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/three_player"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/rebel_button_red"
                        android:paddingTop="4dp"
                        android:paddingBottom="6dp"
                        android:tintMode="multiply"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/three_player" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="44dp"
                    android:layout_height="30dp"
                    android:layout_gravity="top"
                    android:layout_margin="2dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/four_player"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/rebel_button_red"
                        android:paddingTop="4dp"
                        android:paddingBottom="6dp"
                        android:tintMode="multiply"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/four_player" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rebel_volume"
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/rebel_sound_board"
            app:layout_constraintEnd_toEndOf="@+id/rebel_sound_board"
            app:layout_constraintTop_toTopOf="@+id/rebel_sound_board">

            <SeekBar
                android:id="@+id/imperial_volume_slider"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_marginBottom="10dp"
                android:backgroundTintMode="src_over"
                android:progress="100"
                android:progressBackgroundTint="@color/black"
                android:progressBackgroundTintMode="src_over"
                android:progressTint="#A82C2C"
                android:rotation="-90"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/imperial_volume_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imperial_volume_icon"
                android:layout_width="20dp"
                android:layout_height="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/icon_volume" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:id="@+id/button_border"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="10dp"
            android:alpha="0.2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rebel_panel">

        </FrameLayout>

        <ImageView
            android:id="@+id/imageView58"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:background="@drawable/rebel_border"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView64"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rebel_border"
            android:scaleY="-1"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/end_mission_button"
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:background="@drawable/imperial_button_red"
            android:padding="18dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout19"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout19"
            app:layout_constraintStart_toStartOf="@+id/button_border"
            app:layout_constraintTop_toTopOf="@+id/linearLayout19"
            app:srcCompat="@drawable/rebel_icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/border"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/border_landscape"
        android:elevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <ImageView
        android:id="@+id/mp_saving_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:elevation="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rebel_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>