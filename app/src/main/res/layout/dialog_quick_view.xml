<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quick_view_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shadow">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="3dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/quickview_mods"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="9dp"
                    android:background="@drawable/button_back"
                    android:fontFamily="@font/agency_fb"
                    android:gravity="center"
                    android:padding="3dp"
                    android:shadowColor="@color/black"
                    android:shadowRadius="5"
                    android:text="Mods"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="#00000000"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp">

                    <ImageView
                        android:id="@+id/quick_view_weapon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:background="@drawable/empty_item_slot"
                        android:foreground="@drawable/empty_item_slot_border"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/empty_item_slot_border" />

                    <ImageView
                        android:id="@+id/weapon_type"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom|right"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_back"
                        android:padding="5dp"
                        android:visibility="visible"
                        app:srcCompat="@drawable/item_melee" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="#00000000"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp">

                    <ImageView
                        android:id="@+id/quick_view_weapon1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:background="@drawable/empty_item_slot"
                        android:foreground="@drawable/empty_item_slot_border"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/empty_item_slot_border" />

                    <ImageView
                        android:id="@+id/weapon1_type"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom|right"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_back"
                        android:padding="5dp"
                        android:visibility="visible"
                        app:srcCompat="@drawable/item_ranged" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/quickview_mods1"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="bottom|left"
                    android:layout_marginBottom="9dp"
                    android:background="@drawable/button_back"
                    android:fontFamily="@font/agency_fb"
                    android:gravity="center"
                    android:padding="3dp"
                    android:shadowColor="@color/black"
                    android:shadowRadius="5"
                    android:text="Mods"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/quickview_xp"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/button_back"
                    android:padding="5dp"
                    app:srcCompat="@drawable/xpbutton" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="#00000000"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp">

                    <ImageView
                        android:id="@+id/quick_view_armor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:background="@drawable/empty_item_slot"
                        android:foreground="@drawable/empty_item_slot_border"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/empty_item_slot_border" />

                    <ImageView
                        android:id="@+id/armor_type"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom|right"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_back"
                        android:padding="3dp"
                        android:visibility="visible"
                        app:srcCompat="@drawable/item_armour" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="#00000000"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp">

                    <ImageView
                        android:id="@+id/quick_view_power"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:background="@drawable/empty_item_slot"
                        android:foreground="@drawable/empty_item_slot_border"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/empty_item_slot_border" />

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/quickview_reward"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/button_back"
                    android:padding="8dp"
                    app:srcCompat="@drawable/reward_button" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingTop="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#00000000"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp">

                    <ImageView
                        android:id="@+id/quick_view_acc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:background="@drawable/empty_item_slot"
                        android:foreground="@drawable/empty_item_slot_border"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/empty_item_slot_border" />

                    <ImageView
                        android:id="@+id/acc_type"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom|right"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_back"
                        android:padding="5dp"
                        android:visibility="visible"
                        app:srcCompat="@drawable/item_accessory" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#00000000"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp">

                    <ImageView
                        android:id="@+id/quick_view_acc1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:background="@drawable/empty_item_slot"
                        android:foreground="@drawable/empty_item_slot_border"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/empty_item_slot_border" />

                    <ImageView
                        android:id="@+id/acc1_type"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom|right"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_back"
                        android:padding="5dp"
                        android:visibility="visible"
                        app:srcCompat="@drawable/item_accessory" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#00000000"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp">

                    <ImageView
                        android:id="@+id/quick_view_acc2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:background="@drawable/empty_item_slot"
                        android:foreground="@drawable/empty_item_slot_border"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/empty_item_slot_border" />

                    <ImageView
                        android:id="@+id/acc2_type"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom|right"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_back"
                        android:padding="5dp"
                        android:visibility="visible"
                        app:srcCompat="@drawable/item_accessory" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_portrait"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/show_mods"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/shadow"
        android:foregroundGravity="center"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <GridView
            android:id="@+id/mods_grid_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:numColumns="auto_fit" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>